<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.desafio.felipe.desafio.Control.AdicionarActivity">

    <TextView
        android:text="Adicionar a Lista Negra"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/cabecalhoAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/addNome"
        android:hint="Nome"
        style="@style/textAdd"
        app:layout_constraintTop_toBottomOf="@+id/cabecalhoAdd"/>

    <EditText
        android:id="@+id/addTelefone"
        android:hint="Telefone"
        android:inputType="phone"
        style="@style/textAdd"
        app:layout_constraintTop_toBottomOf="@id/addNome"/>

    <Button
        android:text="Adicionar"
        android:id="@+id/addBlackList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>
</android.support.constraint.ConstraintLayout>
