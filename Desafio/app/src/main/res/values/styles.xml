<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#101012</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#696969</item>
    </style>

    <!-- Estilo para as TextViews da  agenda-->
    <style name="textAgenda" >
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo para os ImageButtons da  agenda-->
    <style name="imgBtnAgenda" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toTopOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">parent</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="imgBtnTelaPrincipal" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toTopOf">@id/space</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="textAdd" >
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>
</resources>
